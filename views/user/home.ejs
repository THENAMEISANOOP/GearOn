<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body class="bg-gray-900">
    <!------------ Navbar ---------->
    <!-- Check if the navbar is rendered correctly -->
    <%- include("partials/navBar") %>

    <!-- Page Content -->
    <div class="w-full">
      <img src="/images/logo2.jpg" alt="Banner Image" class="w-full" />
    </div>

    <!-- Products Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 p-4">
      <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
          <div class="bg-gray-200 rounded-lg shadow-md p-4">
            <a href="/product/<%= product._id %>">
              <img
                class="w-full h-auto rounded-lg mb-4"
                src="<%= product.imageUrl %>"
                alt="<%= product.productName %>"
              />
            </a>
            <h3 class="text-lg font-semibold text-gray-800">
              <%= product.productName %>
            </h3>
            <% if (product.discountPrice && product.discountPrice < product.price) { %>
              <div class="text-gray-500 line-through">
                ₹<%= product.price %>
              </div>
              <div class="text-xl font-bold text-gray-900">
                ₹<%= product.discountPrice %>
              </div>
            <% } else { %>
              <div class="text-xl font-bold text-gray-900">
                ₹<%= product.price %>
              </div>
            <% } %>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-center text-gray-500">No products available</p>
      <% } %>
    </div>

   
    
    
    
    

    <!------------- Footer ------------>
    <%- include("partials/footer") %>
  </body>
</html>
