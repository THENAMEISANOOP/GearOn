<header class="border-b border-gray-800 bg-black fixed top-0 w-full z-50">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
            <nav class="flex items-center space-x-6">
                <a href="#" class="text-lg font-bold flex items-center">
                    <img src="/images/gearon_logo.png" alt="GearOn Logo" class="h-16 mr-2">
                </a>
                <a href="/" class="hidden md:inline hover:ring-2 hover:ring-yellow-500 text-white">Home</a>
                <a href="/shopall" class="hidden md:inline hover:ring-2 hover:ring-yellow-500 text-white">Shop</a>
                <a href="#" class="hidden md:inline hover:ring-2 hover:ring-yellow-500 text-white">Contact Us</a>
                <a href="#" class="hidden md:inline hover:ring-2 hover:ring-yellow-500 text-white">About Us</a>
            </nav>
            <div class="flex items-center space-x-4">
                <button class="hover:ring-2 hover:ring-yellow-500 text-white">
                    <i class="fas fa-heart"></i>
                </button>
                <!-- User Greeting or Login Option -->
                <div class="hidden lg:flex items-center space-x-4 ml-8">
                    <% if (user) { %>
                        <a href="/user/profile" class="flex items-center space-x-1 text-sm hover:text-yellow-500 text-white">
                            <i class="fa-regular fa-user text-base"></i>
                            <span>Hello, <%= user.fullName.split(" ")[0] %></span>
                        </a>
                    <% } else { %>
                        <a href="/user/login" class="flex items-center space-x-1 text-sm hover:text-yellow-500 text-white">
                            <i class="fa-regular fa-user text-base"></i>
                            <span>Login</span>
                        </a>
                    <% } %>
                </div>
                <a href="/shop/cart" class="inline-block">
                    <button class="hover:ring-2 hover:ring-yellow-500 text-white">
                        <i class="fas fa-shopping-cart"></i>
                    </button>
                </a>
                
            </div>
        </div>
    </div>
</header>
