<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guerrilla 450 Accessories</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-black text-white">

   <!-- Header -->
   <%- include('../partials/header') %>
    <!-- Header Section -->
    <header class="relative">
        <img src="/images/yamaha.webp" alt="Guerrilla 450 Motorcycle" class="w-full h-96 object-cover">
        <div class="absolute inset-0 bg-black bg-opacity-50 flex flex-col justify-center items-center">
            <h1 class="text-4xl font-bold mb-4">GUERRILLA 450 ACCESSORIES</h1>
            <button class="mt-4 px-4 py-2 bg-yellow-500 text-black font-semibold rounded hover:bg-yellow-600">BUY NOW</button>
        </div>
    </header>

    <!-- Accessories Section -->
    <main>
        <section class="py-8">
            <div class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Accessory Card -->
                <div class="bg-gray-800 p-6 rounded-lg text-center">
                    <span class="block bg-yellow-500 text-black font-bold py-1 px-2 rounded-full mb-4">Up to 40% OFF</span>
                    <img src="/img/yamaha.webp" alt="Exhaust" class="mx-auto mb-4 w-full h-48 object-cover">
                    <h3 class="text-xl font-bold">EXHAUST</h3>
                </div>
                <!-- Accessory Card -->
                <div class="bg-gray-800 p-6 rounded-lg text-center">
                    <span class="block bg-yellow-500 text-black font-bold py-1 px-2 rounded-full mb-4">Up to 24% OFF</span>
                    <img src="/img/yamaha.webp" alt="Navigation System" class="mx-auto mb-4 w-full h-48 object-cover">
                    <h3 class="text-xl font-bold">NAVIGATION SYSTEM</h3>
                </div>
                <!-- Accessory Card -->
                <div class="bg-gray-800 p-6 rounded-lg text-center">
                    <span class="block bg-yellow-500 text-black font-bold py-1 px-2 rounded-full mb-4">Up to 42% OFF</span>
                    <img src="/img/yamaha.webp" alt="Fog Light" class="mx-auto mb-4 w-full h-48 object-cover">
                    <h3 class="text-xl font-bold">FOG LIGHT</h3>
                </div>
            </div>
        </section>

        <!-- Shop by Bike Section -->
        <section class="py-8">
            <div class="container mx-auto text-center">
                <h2 class="text-2xl font-bold mb-6">SHOP BY BIKE</h2>
                <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
                    <!-- Bike Card -->
                    <a href="/brand-category">
                      <div class="bg-gray-700 p-4 rounded-lg">
                        <img src="/images/rc.jpeg" alt="Honda Bike" class="mx-auto mb-2 w-full h-32 object-cover rounded-lg">
                        <h3 class="text-lg font-bold">RC390</h3>
                      </div>
                    </a>

                    <!-- Additional Bike Cards... -->
                    <div class="bg-gray-700 p-4 rounded-lg">
                        <img src="/images/rc.jpeg" alt="Hero Bike" class="mx-auto mb-2 w-full h-32 object-cover rounded-lg">
                        <h3 class="text-lg font-bold">RC200</h3>   
                    </div>
                    <div class="bg-gray-700 p-4 rounded-lg">
                        <img src="/images/rc.jpeg" alt="KTM Bike" class="mx-auto mb-2 w-full h-32 object-cover rounded-lg">
                        <h3 class="text-lg font-bold">RC125</h3>
                    </div>
                    <div class="bg-gray-700 p-4 rounded-lg">
                        <img src="/images/rc.jpeg" alt="Yamaha Bike" class="mx-auto mb-2 w-full h-32 object-cover rounded-lg">
                        <h3 class="text-lg font-bold">DUKE390</h3>
                    </div>
                    <div class="bg-gray-700 p-4 rounded-lg">
                        <img src="/images/rc.jpeg" alt="Suzuki Bike" class="mx-auto mb-2 w-full h-32 object-cover rounded-lg">
                        <h3 class="text-lg font-bold">DUKE25</h3>
                    </div>
                </div>
            </div>
        </section>

        <!-- Bottom Row Section -->
        <section class="py-8">
            <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                <!-- Honda Video -->
                <div class="bg-gray-800 p-4 rounded-lg">
                  <iframe class="w-full h-64 rounded-lg" src="https://www.youtube.com/embed/honda-video-id" 
                          title="Honda Bike Commercial" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen>
                  </iframe>
                  <p class="mt-2 text-center">Honda Bike Commercial</p>
              </div>

              <!-- Yamaha Video -->
              <div class="bg-gray-800 p-4 rounded-lg">
                  <iframe class="w-full h-64 rounded-lg" src="https://www.youtube.com/embed/yamaha-video-id" 
                          title="Yamaha Bike Adventure" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen>
                  </iframe>
                  <p class="mt-2 text-center">Yamaha Bike Adventure</p>
              </div>
            </div>
        </section>
    </main>
   
    <body class="bg-gray-900 text-white">
        <div class="container mx-auto p-4">
            <!-- GUERRILLA 450 Section -->
            <div class="mb-8">
                <h2 class="text-2xl font-bold mb-4">GUERRILLA 450</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <!-- Product 1 -->
                    <div class="bg-gray-800 p-4 rounded">
                        <img src="path/to/your/image1.jpg" alt="LGB KTM 450 Guerrilla Clutch Guard" class="w-full h-48 object-cover rounded mb-4">
                        <h3 class="text-xl font-semibold">LGB KTM 450 Guerrilla Clutch Guard</h3>
                        <p class="text-yellow-500">₹4,000.00</p>
                        <button class="bg-yellow-500 text-black px-4 py-2 rounded mt-2">View</button>
                    </div>
                    <!-- Product 2 -->
                    <div class="bg-gray-800 p-4 rounded">
                        <img src="path/to/your/image2.jpg" alt="LGB KTM 450 Digital Luggage Carrier With MS Plate" class="w-full h-48 object-cover rounded mb-4">
                        <h3 class="text-xl font-semibold">LGB KTM 450 Digital Luggage Carrier With MS Plate</h3>
                        <p class="text-yellow-500">₹3,000.00</p>
                        <button class="bg-yellow-500 text-black px-4 py-2 rounded mt-2">View</button>
                    </div>
                    <!-- Product 3 -->
                    <div class="bg-gray-800 p-4 rounded">
                        <img src="path/to/your/image3.jpg" alt="LGB KTM 450 Digital Luggage Carrier With MS Plate" class="w-full h-48 object-cover rounded mb-4">
                        <h3 class="text-xl font-semibold">LGB KTM 450 Digital Luggage Carrier With MS Plate</h3>
                        <p class="text-yellow-500">₹3,199.00</p>
                        <button class="bg-yellow-500 text-black px-4 py-2 rounded mt-2">View</button>
                    </div>
                    <!-- Product 4 -->
                    <div class="bg-gray-800 p-4 rounded">
                        <img src="path/to/your/image4.jpg" alt="LGB KTM 450 Guerrilla Headlight Grill" class="w-full h-48 object-cover rounded mb-4">
                        <h3 class="text-xl font-semibold">LGB KTM 450 Guerrilla Headlight Grill</h3>
                        <p class="text-yellow-500">₹1,120.00</p>
                        <button class="bg-yellow-500 text-black px-4 py-2 rounded mt-2">View</button>
                    </div>
                </div>
            </div>
    
            <!-- Promotional Banners -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                <!-- Backpack -->
                <div class="bg-gray-800 p-4 rounded text-center">
                    <img src="path/to/your/backpack.jpg" alt="Backpack" class="w-full h-48 object-cover rounded mb-4">
                    <p class="text-yellow-500 font-bold">Flat 34% OFF</p>
                    <h3 class="text-xl font-semibold">BACKPACK</h3>
                </div>
                <!-- Mounts and Charger -->
                <div class="bg-gray-800 p-4 rounded text-center">
                    <img src="path/to/your/mounts.jpg" alt="Mounts and Charger" class="w-full h-48 object-cover rounded mb-4">
                    <p class="text-yellow-500 font-bold">STARTS FROM ₹100</p>
                    <h3 class="text-xl font-semibold">MOUNTS AND CHARGER</h3>
                </div>
                <!-- ABS Top Box -->
                <div class="bg-gray-800 p-4 rounded text-center">
                    <img src="path/to/your/abs_top_box.jpg" alt="ABS Top Box" class="w-full h-48 object-cover rounded mb-4">
                    <p class="text-yellow-500 font-bold">STARTS FROM ₹2,799</p>
                    <h3 class="text-xl font-semibold">ABS TOP BOX</h3>
                </div>
            </div>
    
            <!-- CRASH GUARD Section -->
            <div>
                <h2 class="text-2xl font-bold mb-4">CRASH GUARD</h2>
                <!-- Include crash guard items here following the same structure -->
            </div>
        </div>
   

    <!-- Footer -->
  <%- include('../partials/footer') %>
</body>

</html>
