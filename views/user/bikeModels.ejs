<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bike Models</title>
  <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
  <div class="container">
    <h1 class="text-2xl font-semibold text-center my-6">Bike Models</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 p-4">
      <% if (models && models.length > 0) { %>
        <% models.forEach(bikeModel => { %>
          <div class="bg-gray-800 rounded-lg shadow-md p-4">
            <a href="/products?model=<%= bikeModel %>" class="hover:text-yellow-500">
              
              <img 
                class="w-full h-auto rounded-lg mb-4" 
                src="<%= modelImages[bikeModel] || '/images/placeholder.jpg' %>" 
                alt="<%= bikeModel %>">
            </a>
            <h3 class="text-lg font-semibold text-white text-center">
              <%= bikeModel %>
            </h3>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-center text-gray-500">No bike models available</p>
      <% } %>
    </div>
  </div>
</body>
</html>
