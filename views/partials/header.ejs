<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Modern Responsive Header</title>

  <!-- Font Awesome -->
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    rel="stylesheet"
  />

  <!-- Tailwind -->
  <link
    href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    rel="stylesheet"
  />

  <style>
    /* Smooth mobile menu animation */
    .mobile-menu-enter {
      max-height: 0;
      opacity: 0;
      transition: all 0.4s ease;
    }
    .mobile-menu-open {
      max-height: 300px;
      opacity: 1;
    }

    /* Dropdown animation */
    .dropdown {
      transform: translateY(10px);
      opacity: 0;
      transition: all 0.25s ease;
    }
    .group:hover .dropdown {
      transform: translateY(0);
      opacity: 1;
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const menuBtn = document.getElementById("menu-button");
      const mobileMenu = document.getElementById("mobile-menu");

      menuBtn.addEventListener("click", () => {
        mobileMenu.classList.toggle("mobile-menu-open");
      });
    });
  </script>
</head>

<body class="bg-gray-900 text-white">

  <header class="backdrop-blur-xl bg-gray-900/80 border-b border-gray-700">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">

      <!-- Logo -->
      <div class="flex items-center gap-3">
        <img src="/images/gearon_logo.png" class="h-14 w-auto" alt="Logo" />
      </div>

      <!-- Desktop Search -->
      <div class="hidden lg:block flex-1 mx-8 relative">
        <input
          type="text"
          placeholder="Search for products"
          class="w-full pl-10 pr-4 py-2 rounded-lg bg-gray-800/70 border border-gray-700 focus:ring-2 focus:ring-yellow-500 transition"
        />
        <i class="fa fa-search absolute left-3 top-2.5 text-gray-400"></i>
      </div>

      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-8">
        
        <div class="relative group">
          <button class="hover:text-yellow-500">Shop by Bike</button>

          <div
            class="dropdown absolute left-0 hidden group-hover:block bg-gray-800 rounded-lg shadow-xl p-2 mt-2 border border-gray-700"
          >
            <a href="#" class="block px-4 py-2 hover:bg-gray-700 rounded">Bike 1</a>
            <a href="#" class="block px-4 py-2 hover:bg-gray-700 rounded">Bike 2</a>
          </div>
        </div>

        <a class="hover:text-yellow-500" href="#">Explore</a>
        <a class="hover:text-yellow-500" href="#">Category</a>
        <a class="hover:text-yellow-500" href="#">About</a>
        <a class="hover:text-yellow-500" href="#">Contact Us</a>
      </nav>

      <!-- Icons -->
      <div class="flex items-center gap-6">
        <a href="/user/login">
          <i class="fa fa-user text-xl hover:text-yellow-500 transition"></i>
        </a>
        <i class="fa fa-shopping-cart text-xl hover:text-yellow-500 transition"></i>

        <!-- Mobile Toggle -->
        <button id="menu-button" class="lg:hidden">
          <i class="fa fa-bars text-2xl"></i>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="mobile-menu-enter lg:hidden overflow-hidden bg-gray-800/90 border-t border-gray-700"
    >
      <div class="px-4 py-4 space-y-2">
        <a href="#" class="block py-2 hover:text-yellow-400">Explore</a>
        <a href="#" class="block py-2 hover:text-yellow-400">Category</a>
        <a href="#" class="block py-2 hover:text-yellow-400">About</a>
        <a href="#" class="block py-2 hover:text-yellow-400">Contact Us</a>
      </div>

      <!-- Mobile Search -->
      <div class="px-4 pb-4 relative">
        <input
          type="text"
          placeholder="Search for products"
          class="w-full pl-10 pr-4 py-2 rounded-lg bg-gray-800 border border-gray-700 focus:ring-2 focus:ring-yellow-500 transition"
        />
        <i class="fa fa-search absolute left-6 top-3 text-gray-400"></i>
      </div>
    </div>
  </header>

</body>
</html>
